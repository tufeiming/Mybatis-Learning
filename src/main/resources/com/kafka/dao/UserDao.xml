<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kafka.dao.UserDao">
    <sql id="baseSelect">id, username, age, address</sql>
    <insert id="insertUser">
        insert into user
        values (null, #{username}, #{age}, #{address})
    </insert>
    <update id="updateUser">
        update user
        <set>
            <if test="age!=null">
                age = #{age},
            </if>
            <if test="username!=null">
                username = #{username},
            </if>
            <if test="address!=null">
                address = #{address},
            </if>
        </set>
        where id = #{id};
    </update>
    <delete id="deleteUser">
        delete
        from user
        where id = #{id}
    </delete>

    <select id="findAll" resultType="com.kafka.pojo.User">
        select
        <include refid="baseSelect"/>
        from user
    </select>
    <select id="findById" resultType="com.kafka.pojo.User">
        select
        <include refid="baseSelect"/>
        from user
        where id = #{id}
    </select>
    <select id="findByUser" resultType="com.kafka.pojo.User">
        select
        <include refid="baseSelect"/>
        from user
        where id = #{id}
        and username = #{username}
        and age = #{age}
        and address = #{address}
    </select>
    <select id="findByMap" resultType="com.kafka.pojo.User">
        select
        <include refid="baseSelect"/>
        from user
        where id = #{id}
        and username = #{username}
        and age = #{age}
        and address = #{address}
    </select>
    <select id="findByCondition" resultType="com.kafka.pojo.User">
        select
        <include refid="baseSelect"/>
        from user
        <where>
            <if test="id!=null">
                id=#{id}
            </if>
            <if test="username!=null">
                and username=#{username}
            </if>
        </where>
    </select>
    <select id="findByIds" resultType="com.kafka.pojo.User">
        select
        <include refid="baseSelect"/>
        from user
        <where>
            <foreach collection="ids" open="id in (" close=")" item="id" separator=",">
                #{id}
            </foreach>
        </where>
    </select>
    <select id="selectChoose" resultType="com.kafka.pojo.User">
        select
        <include refid="baseSelect"/>
        from user
        <where>
            <choose>
                <when test="id!=null">
                    id=#{id}
                </when>
                <when test="username!=null">
                    username = #{username}
                </when>
                <otherwise>
                    id= 2
                </otherwise>
            </choose>
        </where>
    </select>
</mapper>